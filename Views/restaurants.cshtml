
<body>
  @if(@Model.Count == 0)
  {
    <p>No restaurants have been added yet!</p>
  }
  else
  {
      <h1>Here is list of restaurants:</h1>
      <ul>
        @foreach(var restaurant in Model)
        {
          <p>@restaurant.GetName()</p>
          <ul>
            <li>@restaurant.GetAddress()</li>
          </ul>
        }
      </ul>
      <form action="/restaurants/delete" method="post">
        <button type="submit">Delete all restaurants</button>
      </form>
  }
  <h4><a href="/restaurants/new">Add a new Restaurant</a></h4>
  <h4><a href="/">Back to main</a></h4>
</body>
